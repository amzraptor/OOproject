<?php 
include "../db/db.php";//include db script
session_start();
$action = $_POST['action'];
switch($action)
{
case "start":
	{
	      	if(empty($_SESSION['user']))
		{
		      $_SESSION['user'] = "guest";
		      $_SESSION['cart'] = array();
		}
		$arr = array ('username'=>$_SESSION['user']);
		echo json_encode($arr);
		break;
	}
default:
	{
		echo "from index backend error";
		break;
	}
}
?>
