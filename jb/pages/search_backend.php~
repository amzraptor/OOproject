function get_search_results($search_results, $index = 1)
{
	$table = "product";
	$fields =array("name");
	$values =array($search_results);
	
	return get_search($table,$fields,$values);

    
}


$action = $_POST['action'];
switch($action)
{
case "start":
	{
	      	/*if(empty($_SESSION['user']))
		{
		      $_SESSION['user'] = "guest";
		      $_SESSION['cart'] = array();
		}
	
		$arr = array ('username'=>$_SESSION['user']);*/

		if(!empty($_POST['search_words']))
		{ 

			$products = get_search_results($_POST['search_words']);
			
		}
		else
		{
			$products = array ('error'=>"cant be empty");
			//$arr['products'] = $products;
		}
		echo json_encode($products);
		break;
	}
default:
	{
		echo "from index backend error";
		break;
	}
}
